<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.stukalov.staffairlines.pro.ui.home.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.stukalov.staffairlines.pro.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.stukalov.staffairlines.pro.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/sel_point"
        android:name="com.stukalov.staffairlines.pro.ui.sel_point.SelPointFragment"
        android:label="Select point"
        tools:layout="@layout/fragment_sel_point" />

    <fragment
        android:id="@+id/resultlayout"
        android:name="com.stukalov.staffairlines.pro.ui.result.ResultFragment"
        android:label="Back to search"
        tools:layout="@layout/fragment_result" />
</navigation>