<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:layout_margin="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--1-->
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/date_for_result"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

        <!--2-->
        <LinearLayout
            android:id="@+id/llFlightLayout"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_margin="0dp"
            app:flow_horizontalAlign="start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <FrameLayout
                android:id="@+id/RatingFrame"
                android:layout_width="5dp"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_height="match_parent">
            </FrameLayout>

            <!--3-->
            <LinearLayout
                android:orientation="vertical"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--4-->
                <LinearLayout
                    android:id="@+id/llWaitInfo"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/clock0"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <TextView
                        android:id="@+id/tvWaitInfo"
                        android:textSize="12sp"
                        android:textColor="@color/staff_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <!--4-->

                <!--4-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <!--5-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="0dp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_margin="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/aclogo"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="0dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/acname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:layout_margin="0dp"
                            android:padding="0dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/black" />

                    </LinearLayout>
                    <!--5-->

                    <!--5-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="0dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:textSize="10sp"
                            android:text="@string/next_day_label"
                            android:textAlignment="textEnd"
                            android:textColor="@color/sa_full_transparent"
                            android:padding="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/timedep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:padding="0dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/deppoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                    </LinearLayout>
                    <!--5-->

                    <!--5-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingStart="0dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="0dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/planepic"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="start"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="0dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/durtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:layout_margin="0dp"
                            android:padding="0dp"
                            android:textSize="12sp"
                            android:textColor="@color/black">
                        </TextView>

                    </LinearLayout>
                    <!--5-->

                    <!--5-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="0dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/nextDay"
                            android:textSize="10sp"
                            android:textColor="@color/sa_full_transparent"
                            android:text="@string/next_day_label"
                            android:textAlignment="textEnd"
                            android:padding="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/timearr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:padding="0dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/arrpoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:padding="0dp"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                    </LinearLayout>
                    <!--5-->

                    <!--5-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="5dp"
                            android:id="@+id/cntrating"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/round_box_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <!--5-->

                </LinearLayout>
                <!--4-->

            </LinearLayout>
            <!--3-->

        </LinearLayout>
        <!--2-->

    </LinearLayout>
    <!--1-->

</androidx.constraintlayout.widget.ConstraintLayout>