<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_margin="0dp"
            app:flow_horizontalAlign="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:text="From"
                android:textSize="16sp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_gray">
            </TextView>

            <LinearLayout
                android:orientation="vertical"
                android:padding="0dp"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_margin="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hist_city1"
                    android:textSize="14sp"
                    android:text="Berlin, Germany"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/hist_code1"
                    android:text="BER"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:padding="0dp"
                    android:textColor="@color/text_gray">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/hist_date"
                android:text="29-01-2025"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:textColor="@color/black">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:flow_horizontalAlign="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:text="To"
                android:textSize="16sp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_gray">
            </TextView>

            <LinearLayout
                android:orientation="vertical"
                android:padding="0dp"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_margin="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hist_city2"
                    android:textSize="14sp"
                    android:text="Paris, France"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/hist_code2"
                    android:text="PAR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:padding="0dp"
                    android:textColor="@color/text_gray">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/hist_pax"
                android:text="1 pax"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:textColor="@color/black">
            </TextView>

        </LinearLayout>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="@color/lightgray"
            android:layout_height="1px"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>